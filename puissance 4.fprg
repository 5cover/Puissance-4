    <function name="JouerTour" type="None" variable="">
        <parameters>
            <parameter name="nomJoueur" type="String" array="False"/>
            <parameter name="joueur" type="Integer" array="False"/>
        </parameters>
        <body>
            <call expression="AfficherCestAuTourDe(nomJoueur)"/>
            <assign variable="colonne" expression="DemanderColonne()"/>
            <assign variable="ligne" expression="ObtenirLigneDePose(colonne)"/>
            <call expression="grille(colonne, ligne, joueur)"/>
            <call expression="AfficherGrille()"/>
            <call expression="QuitterSiGagnant(colonne, ligne, nomJoueur)"/>
        </body>
    </function>
    <function name="JouerTourAuto" type="None" variable="">
        <parameters>
            <parameter name="nomJoueur" type="String" array="False"/>
            <parameter name="Case" type="Integer" array="False"/>
        </parameters>
        <body>
            <call expression="AfficherCestAuTourDe(nomJoueur)"/>
            <assign variable="colonne" expression="DemanderColonnePC()"/>
            <assign variable="ligne" expression="ObtenirLigneDePose(colonne)"/>
            <call expression="grille(colonne, ligne, joueur)"/>
            <call expression="AfficherGrille()"/>
            <call expression="QuitterSiGagnant(colonne, ligne, nomJoueur)"/>
        </body>
    </function>
    <function name="ObtenirLigneDePose" type="Integer" variable="ERREURCOLONNEPLEINE">
        <parameters>
            <parameter name="colonne" type="Integer" array="False"/>
        </parameters>
        <body>
            <for variable="ligne" start="HAUTEUR" end="0" direction="dec" step="1">
                <if expression="grille(colonne, ligne) == CaseVIDE">
                    <then>
                        <assign variable="return" expression="ligne"/>
                    </then>
                    <else/>
                </if>
            </for>
        </body>
    </function>
    <function name="QuitterSiGagnant" type="None" variable="">
        <parameters>
            <parameter name="colonne" type="Integer" array="False"/>
            <parameter name="ligne" type="Integer" array="False"/>
            <parameter name="nomJoueur" type="String" array="False"/>
        </parameters>
        <body>
            <if expression="ChercherAlignement(colonne, ligne)">
                <then>
                    <call expression="AfficherMessageGagnant(nomJoueur)"/>
                    <call expression="quit()"/>
                </then>
                <else/>
            </if>
        </body>
    </function>
